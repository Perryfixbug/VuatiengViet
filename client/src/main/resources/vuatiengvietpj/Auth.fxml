<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #e7e7e7e; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vuatiengvietpj.controller.UserController">

    <!-- Title Label -->
    <Label style="-fx-font-size: 32px; -fx-text-fill: linear-gradient(to right, #fa709a, #fee140); -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 2, 0, 0, 1);" text="沛 VUA TI蘯ｾNG VI盻T 沛">
        <font>
            <Font name="Arial" size="24.0" />
        </font>
    </Label>

    <!-- TabPane -->
    <TabPane fx:id="tabPane" maxWidth="596.0" prefHeight="304.0" prefWidth="596.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" tabClosingPolicy="UNAVAILABLE">

        <!-- Tab Login -->
        <Tab style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="ﾄ斉ハg nh蘯ｭp">
            <VBox alignment="CENTER" prefHeight="200" prefWidth="500" spacing="10" style="-fx-padding: 15; -fx-background-color: linear-gradient(to bottom, #a8edea, #fed6e3); -fx-border-radius: 5; -fx-background-radius: 10;">
                <TextField fx:id="loginEmail" promptText="Email" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <PasswordField fx:id="loginPassword" promptText="M蘯ｭt kh蘯ｩu" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <Button onAction="#onLogin" prefHeight="30.0" prefWidth="140.0" style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to right, #fa709a, #fee140); -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 0, 1);" text="ﾄ斉ハg nh蘯ｭp" />
            </VBox>
        </Tab>

        <!-- Tab Signup -->
        <Tab style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="ﾄ斉ハg kﾃｽ">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding:15; -fx-background-color: linear-gradient(to bottom, #a8edea, #fed6e3); -fx-border-radius: 10; -fx-background-radius: 10;">
                <TextField fx:id="signupName" promptText="Tﾃｪn" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <TextField fx:id="signupEmail" promptText="Email" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <PasswordField fx:id="signupPassword" promptText="M蘯ｭt kh蘯ｩu" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <Button onAction="#onSignup" prefHeight="30.0" prefWidth="141.0" style="-fx-font-size:14px; -fx-background-color: linear-gradient(to right, #fa709a, #fee140); -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 0, 1);" text="ﾄ斉ハg kﾃｽ" />
            </VBox>
        </Tab>

        <!-- Tab Change Password -->
        <Tab style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="ﾄ雪ｻ品 m蘯ｭt kh蘯ｩu">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15; -fx-background-color: linear-gradient(to bottom, #a8edea, #fed6e3); -fx-border-radius: 10; -fx-background-radius: 10;">
                <TextField fx:id="changePasswordEmail" promptText="Email" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <PasswordField fx:id="oldPassword" promptText="M蘯ｭt kh蘯ｩu cﾅｩ" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <PasswordField fx:id="newPassword" promptText="M蘯ｭt kh蘯ｩu m盻嬖" style="-fx-font-size:14px; -fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" />
                <Button onAction="#onChangePassword" prefHeight="30.0" prefWidth="140.0" style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to right, #fa709a, #fee140); -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 0, 1);" text="ﾄ雪ｻ品 m蘯ｭt kh蘯ｩu" />
            </VBox>
        </Tab>
    </TabPane>

    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-font-size:12px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 1, 0, 0, 1);" textFill="yellow" />
</VBox>
